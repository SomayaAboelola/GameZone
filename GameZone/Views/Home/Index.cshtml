@using GameZone.Settings

@model IEnumerable<Game>
@{
    ViewData["Title"] = "Home Page";
}
@if (!Model.Any())
{
    <div class="alert alert-dismissible alert-warning">
        <h4 class="alert-heading">No game</h4>
        <p class="mb-0">No games were added yet.</p>
    </div>
}
else
{
    <div class="row mt-5">
        @foreach (var game in Model)
        {
            <div class="col-lg-4 col-md-6">
                <a class="card border-success mb-3 text-decoration-none rounded-3 overflow-hidden" asp-action="Details" asp-controller="Games" asp-route-id="@game.Id">

                    <div class="card-body" style="background-image:url(@($"{FileSetting.filePath}/{game.Cover}"))  ; background-size :cover ;background-position :center ;height:400px">
                        <div class="d-flex align-items-end h-100">
                            <span class="badge bg-secondary rounded-0 ">@game.Category?.Name</span>
                        </div>
                    </div> 
                    <div class="card-footer  text-muted d-flex justify-content-between align-items-center">
                                   <h5>@game.Name</h5>
                               <div>
                                    @foreach(var gameDevice in game.Devices)
                                    {
                                        <i class="@gameDevice.Device.Icon me-2 fs-4" ></i>
                                    }
                               </div>
    
                    </div>
                </a>
            </div>
        }
    </div>
 }
        



